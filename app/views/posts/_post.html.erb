<%= turbo_frame_tag dom_id(post) do %>
  <div class="card card-body">
    <div><%= post.body %></div>

    <div class="mt-2">
      <%= link_to "Edit", edit_post_path(post) %>
       <%= link_to "Delete", post_path(post), method: :delete, data: { turbo_method: "delete" } %>
    </div>
  </div>
<% end %>